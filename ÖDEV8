import java.util.Scanner;

public class TersYildiz {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        System.out.print("sayÄ± giriniz : ");
        int n = input.nextInt();

        for (int i=0; i<n; i++)
        {
            for (int k=0; k<=i; k++)
            {
                System.out.print(" ");
            }
            for (int j=(2*n-1); j>=(2*i+1); j--)
            {
                System.out.print("*");
            }
            System.out.println();
        }
    }
}
